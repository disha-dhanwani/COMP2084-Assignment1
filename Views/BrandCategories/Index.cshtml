@model IEnumerable<SneakerBoxStore.Models.BrandCategory>

@{
    ViewData["Title"] = "Brands - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Brand Categories</h1>
@if(User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.BrandCategoryId">Edit</a> <br />
                    <a asp-action="Delete" asp-route-id="@item.BrandCategoryId">Delete</a> <br />
                }
                <a asp-action="Details" asp-route-id="@item.BrandCategoryId">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
