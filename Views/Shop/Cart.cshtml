@model IEnumerable<SneakerBoxStore.Models.Cart>

@{
    ViewData["Title"] = "Your Cart - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    double Total = 0;
}

<h1>Your Cart</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sneaker)
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="text-right">
                Cart Total
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            Total += (item.Quantity * item.Price);
            <tr>
                <td>
                    <a asp-controller="Sneakers" asp-action="Details" asp-route-id="@item.SneakerId">@item.Sneaker.ModelName</a>
                </td>
                <td>
                    <img src="@("~/img/sneaker_upload/" + item.Sneaker.Image)" asp-append-version="true" width="150px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td class="text-right">
                    @String.Format("{0:c}", item.Price)
                </td>
                <td class="text-right">
                    @String.Format("{0:c}", (item.Quantity * item.Price))
                </td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.CartId">Delete</a>
                </td>
            </tr>
        }
            <tr>
                <td colspan="5" class="text-right">
                    @String.Format("{0:c}", Total)
                </td>
                <td>
                    <a asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                    <a asp-action="Checkout" class="btn btn-outline-info">Checkout</a>
                </td>
            </tr>
        
    </tbody>
</table>
