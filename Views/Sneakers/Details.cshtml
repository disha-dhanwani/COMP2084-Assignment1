@model SneakerBoxStore.Models.Sneaker

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>
        @Html.DisplayFor(model => model.BrandCategory.BrandName)
    @Html.DisplayFor(model => model.ModelName)
</h4>
<hr />
<dl class="row font-weight-bold">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ModelName)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ModelName)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.ReleaseYear)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ReleaseYear)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Material)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Material)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Price)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Price)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Image)
    </dt>
    <dd class="col-sm-10">
        <img src="@("~/img/sneaker_upload/"+Model.Image)" asp-append-version="true" width="300px" />
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.InStock)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.InStock)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.BrandCategory)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.BrandCategory.BrandName)
    </dd>
</dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.SneakerId">
        <input type="submit" value="Edit" class="btn btn-outline-primary" />
    </a>
    <a asp-action="Delete" asp-route-id="@Model.SneakerId">
        <input type="submit" value="Delete" class="btn btn-outline-primary" />
    </a>
    <br /><br />
    <a asp-action="Index">Back to List</a>
</div>
<br />

<div>
        <a asp-action="Create" asp-controller="ShoppingCarts" >
            <input type="hidden" asp-for="ShoppingCarts" />
            <input type="submit" value="Add to Cart!" class="btn btn-outline-primary " />
        </a>
    </div>